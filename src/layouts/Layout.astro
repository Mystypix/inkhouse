---
import Navigation from "../components/Navigation.astro";
interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="Ink House. Vítej na stránkách pražského studia! U nás najdeš osobní přístup s přátelskou atmosférou, kde si můžeš vybrat z několika stylů tetování." />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/png" href="/favicon-96x96.png" sizes="96x96" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <link rel="shortcut icon" href="/favicon.ico" />
        <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
        <link rel="manifest" href="/site.webmanifest" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
    </head>
    <body>
        <Navigation />
        <slot />
        <footer>
            <p>InkHouse &copy; {new Date().getFullYear()}</p>
        </footer>
    </body>
</html>
<style is:global>
    @font-face {
        font-family: 'eina01-regularuploaded_file';
        src: url('/eina01-regular-webfont.woff2') format('woff2'),
        url('/eina01-regular-webfont.woff') format('woff');
        font-weight: normal;
        font-style: normal;

    }

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: "eina01-regularuploaded_file", sans-serif;
        font-size: 18px;
    }

    :root {
        --text-color: #1c3a39;
        --main-color: #e8af03;
        --secondary-color: #f1f0ed;
        --tertiary-color: #f1e7bd;
    }

    html {
        width: 100%;
        scroll-behavior: smooth;
    }

    ul {
        margin: 10px 0;
        padding-left: 20px;
    }

    p + p {
        margin-top: 10px;
    }

    a {
        color: var(--main-color);

        &:hover {
            text-decoration: none;
        }
    }

    .logo {
        text-decoration: none;
    }

    .title {
        margin-bottom: 30px;
        font-size: 30px;
    }

    .section {
        position: relative;
        z-index: 1;
        padding-top: 90px;
        width: 100%;
        min-height: 100vh;
        display: grid;
        grid-template-columns: 50% 50%;
    }

    .paragraphTitle {
        font-size: 24px;
        margin-bottom: 10px;
        margin-top: 30px;
    }

    .content {
        padding: 60px 30px;
        background: #fff;
    }

    .contentBg {
        position: fixed;
        top: 90px;
        right: 0;
        display: block;
        width: 50%;
        height: 100vh;
        object-fit: cover;
    }

    footer {
        position: relative;
        z-index: 1;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 60px;
        background: #96958f;
        color: #fff;
    }

    .cookie-banner {
        position: fixed;
        bottom: 20px;
        left: 50%;
        transform: translateX(-50%);
        background: #2B373B;
        color: white;
        padding: 15px;
        border-radius: 4px;
        z-index: 1000;
    }
    .cookie-banner-buttons {
        display: flex;
        gap: 20px;
        margin-top: 20px;
        justify-content: center;
    }
    .cookie-banner-accept {
        background: var(--main-color);
        color: white;
        border: 1px solid var(--main-color);
        padding: 8px 16px;
        border-radius: 4px;
        cursor: pointer;
        transition: background .25s, color .25s;

        &:hover {
            background: none;
            color: var(--main-color);
        }
    }
    .cookie-banner-decline {
        background: none;
        color: var(--main-color);
        border: 1px solid var(--main-color);
        padding: 8px 16px;
        border-radius: 4px;
        cursor: pointer;
        transition: background .25s, color .25s;

        &:hover {
            background: var(--main-color);
            color: white;
        }
    }

    @media screen and (max-width: 980px) {
        .section {
            grid-template-columns: 100%;
            min-height: unset;
        }

        .title {
            font-size: 30px;
            text-align: center;
        }

        .contentBg {
            position: relative;
            top: 0;
            width: 100%;
        }
    }
</style>
<script is:inline>
    function acceptCookies() {
      document.cookie = `tracking_consent=true; expires=Fri, 31 Dec 9999 23:59:59 GMT`;
      window.dataLayer = window.dataLayer || [];
      window.dataLayer.push({ event: 'consent_given' });
    }
    
    function declineCookies() {
      document.cookie = `tracking_consent=false; expires=Fri, 31 Dec 9999 23:59:59 GMT`;
    }
    
    function createCookieConsentBanner() {
      if (document.cookie.split(';').some((item) => 
        item.trim().startsWith('tracking_consent='))) {
        return;
      }
      
      const banner = document.createElement('div');
      banner.innerHTML = `
        <div class="cookie-banner">
          <p><strong>Používáme cookies 🍪</strong></p>
          <p>
            Naše webové stránky používají cookies k analýze návštěvnosti pomocí Google Analytics 
            a ke sledování konverzí pomocí Meta Pixels. Pokračováním v používání našich stránek 
            souhlasíte s naším používáním cookies.
          </p>
          <div class="cookie-banner-buttons">
            <button class="cookie-banner-accept" onclick="acceptCookies()">Souhlasím</button>
            <button class="cookie-banner-decline" onclick="declineCookies()">Odmítnout</button>
          </div>
        </div>
      `;
      document.body.appendChild(banner);
    }
    
    createCookieConsentBanner();
</script>
    
