---
import { client } from '../../tina/__generated__/client'
import { TinaMarkdown } from 'tinacms/dist/rich-text'
import Layout from "../layouts/Layout.astro";
const data = await client.queries.contact({ relativePath: 'contact.md' })
---

<Layout title="InkHouse - Kontakt">
    <section class="section">
        <div class="content">
            <h1 class="title">Kontakt</h1>
            <div>
                <a href=`address:${data.data.contact.address}`>{data.data.contact.address}</a>
                <TinaMarkdown content={data.data.contact.text} />
            </div>
            <iframe class="map" style="border:none" src="https://en.frame.mapy.cz/s/jebedukela" frameborder="0"></iframe>
        </div>
    </section>
</Layout>
<style>
    .map {
        margin-top: 40px;
        width: 100%;
        height: 333px;
    }
</style>